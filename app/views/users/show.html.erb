<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>

    <article class="timeline">
     
    <% if @user.friendship_requested?(current_user) %>

    <ul class="posts">
      <%= render "friend_request" %>
    </ul>
    <% end %> 

 <% unless current_user.friendship_requested?(@user) or current_user.friend?(@user) %>
  <%= link_to 'Add Friend', friendships_path(user_id: @user.id), method: :post %>
 <% end %> 
   
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
